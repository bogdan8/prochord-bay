<div class="container">
  <div class="row">
    <div class="col-lg-5 col-lg-offset-3 col-md-5 col-md-offset-3 col-sm-10 col-xs-12">
      <!-- Square card -->
      <div class="demo-card-square mdl-card mdl-shadow--2dp" id="devise-cart">
        <div class="mdl-card__title mdl-card--expand">
          <%= image_tag('music/4',class: 'devise-image-cart') %>
          <h2 class="mdl-card__title-text">Повторити інструкції підтвердження?</h2>
        </div>
        <div class="mdl-card__actions mdl-card--border button-with-between">
          <a type="button" href="/users/auth/facebook" class="btn-fb mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent" style="background-color: #4264aa">
            <%= fa_icon 'facebook' %>
            Facebook
          </a>
          <!--Twitter-->
          <a type="button" href="/users/auth/twitter" class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent" style="background-color: #55ACEE">
            <%= fa_icon 'twitter' %>
            Twitter
          </a>
        </div>
        <div class="mdl-card__supporting-text">
          <%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }) do |f| %>

        <%= devise_error_messages_alert! %>

              <div id="devise-form">
                <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                  <%= f.email_field :email,class: 'mdl-textfield__input', autofocus: true, value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email) %>
                  <%= f.label :email, class: 'mdl-textfield__label' %>
                </div>
                <br>
                <br>
                <%= f.submit 'Надіслати повторно', id: 'devise-button-submit', class: 'mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent' %>
                <%= spinner_css %>
              </div>
              <%= render 'devise/shared/links' %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
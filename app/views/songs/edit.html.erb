<%= provide :site_title, 'Редагування пісні |' %>
<%= provide :li_all_songs, 'active' %>
<div class="container">
  <div class="row">
    <div class="col-lg-5 col-lg-offset-3 col-md-5 col-md-offset-3 col-sm-10 col-xs-12">
      <!-- Square card -->
      <div class="demo-card-square mdl-card mdl-shadow--2dp" id="song-cart">
        <div class="mdl-card__title mdl-card--expand">
          <%= image_tag('music/4', class: 'devise-image-cart') %>
          <h2 class="mdl-card__title-text">Додати пісню</h2>
        </div>
        <div class="mdl-card__supporting-text">
          <%= form_for @song, method: :put  do |f| %>
              <div id="devise-form">
                <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                  <%= f.text_field :performer, class: 'mdl-textfield__input', autofocus: true, minlength: 3 %>
                  <%= f.label :performer, class: 'mdl-textfield__label' %>
                </div>
                <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                  <%= f.text_field :title, class: 'mdl-textfield__input', autofocus: true, minlength: 3 %>
                  <%= f.label :title, class: 'mdl-textfield__label' %>
                </div>

                <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                  <%= f.text_area :body, class: 'mdl-textfield__input', rows: 10,  cols: 45, minlength: 15 %>
                  <%= f.label :body, class: 'mdl-textfield__label' %>
                </div>
                <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                  <%= recaptcha_tags %>
                </div>
                <br>
                <br>
                <%= f.submit 'Додати', id: 'button-submit', class: 'mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent' %>
                <%= spinner_css %>
              </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
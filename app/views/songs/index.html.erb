<div class="container">
  <div class="row">
    <div class="col-lg-6 col-lg-offset-3 col-xs-12">
      <% @songs.each do |items| %>
          <div class="songs-list-block">
            <span class="mdl-chip mdl-chip--contact">
              <span class="mdl-chip__contact mdl-color--teal mdl-color-text--white"><%= fa_icon('music') %></span>
              <span class="mdl-chip__text song-chip-text">
                <%= link_to song_path(items) do %>
                  <%= items.performer %> - <%= items.title %>
                <% end %>
                <div>
                  <span class="mdl-chip__contact mdl-color--teal-pink mdl-color-text--white"><a href=""><%= fa_icon('heart') %></a></span>
                  <span class="mdl-chip__text margin-right-teen"><%= items.count_views %></span>

                  <span class="mdl-chip__contact mdl-color--teal mdl-color-text--white"><%= fa_icon('eye') %></span>
                  <span class="mdl-chip__text"><%= items.count_views %></span>
                </div>
              </span>
            </span>
          </div>
      <% end %>
    </div>
  </div>
</div>

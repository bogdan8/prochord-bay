$(function() {
  $('#search').autocomplete({
    source: '/<%= I18n.locale %>/home/search',
    messages: {
      noResults: '',
      results() {}
    }
  })

  $('#add').click(function () {
    var fontSize = parseInt($('.song-body pre').css('font-size'));
    $('.song-body pre').css({'font-size': fontSize + 1 + "px"});
  });

  $('#subtract').click(function () {
    var fontSize = parseInt($('.song-body pre').css('font-size'));
    $('.song-body pre').css({'font-size': fontSize - 1 + "px"});
  });
});